  },

  // âœ… CRITICAL: Proxy Configuration for Backend API
  // Forward all /api/* requests to the middleware backend
  // This eliminates CORS issues and ensures proper routing
  async rewrites() {
    const backendUrl = process.env.NEXT_PUBLIC_API_URL || 'http://localhost:3000';
    
    return {
      beforeFiles: [
        {
          source: '/api/:path*',
          destination: `${backendUrl}/api/:path*`,
        },
      ],
    };
  },
};

export default nextConfig;
